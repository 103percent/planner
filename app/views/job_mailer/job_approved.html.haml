=render partial: 'shared_mailers/header', locals: { title: "Job post approved" }

%body{ bgcolor: "#FFFFFF" }

  =render partial: 'shared_mailers/body_header', locals: { title: "Job post Approved" }

  %table{ class: "body-wrap"}
    %tr
      %td
      %td{ class: "container", bgcolor: "#FFFFFF" }

        .content
          %table
            %tr
              %td
                %h3 Hi, #{@member.name}
                %p.lead
                  The
                  %a{ href: full_url_for(job_url(@job)) }#{@job.title} at #{@job.company}
                  job you submitted has been approved.
                %p.callout
                  It is now available to all members at
                  %a{ href: full_url_for(jobs_url) }Codebar's jobs section &raquo;

                %table.social{ width: "100%" }
                  %tr
                    %td

                      %table{ align: "left", class: "column"}
                        %tr
                          %td

                            %h5 Connect with Us:
                            %p
                              %a{ href: "https://www.facebook.com/codebarHQ", class: 'soc-btn fb'} Like us on facebook
                              %a{ href: "http://twitter.com/codebar", class: "soc-btn tw" }Follow us on twitter
                              %a{ href: "https://www.facebook.com/groups/codebarcommunity", class: 'soc-btn fb'} Join our facebook community


                      %table.column{ align: "left" }
                        %tr
                          %td
                            %h5 Contact Info:
                            %p Email: <strong><a href="emailto:hello@codebar.io">hello@codebar.io</a></strong>

                      %span.clear
        %td

  = render partial: 'shared_mailers/footer'
