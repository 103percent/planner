.stripe.reverse
  .row
    .large-12.columns
      %h1=t('member.jobs.title')

  - if @jobs.any?
    .row
      %table.large-12.columns
        %thead
          %tr
            %th Job title
            %th Company
            %th Location
            %th Published on
            %th Expires on
            %th Status
            %th
        %tbody
          - @jobs.each do |job|
            = render partial: 'member/jobs/job', locals: { job: job }

  .row
    .large-12.columns
      =link_to('New job', new_member_job_path, class: 'button medium ')
