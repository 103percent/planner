#student.content
  .titlebox.mission
    %h2
      Upcoming
    .dot

  .description
    - if @upcoming_student.any?
      .details-block
        - @upcoming_student.each do |invitation|
          .three-quarters
            %h3
              = link_to invitation.parent.title, invitation_path(invitation)
              .right-float
                =link_to attendance_status(invitation), invitation_path(invitation), class: "button"
            %h5= invitation.parent.description
            %h6
              = "on #{l(invitation.parent.date_and_time, format: :website_format)}"
    - else
      %em There are no upcoming events

  - if @attended.any?
    .titlebox.mission
      %h2
        Attended
      .dot
    .description
      .details-block
        - @attended.each do |invitation|
          %h3
            = link_to invitation.parent.title, invitation_path(invitation)
            .right-float
              =link_to "View", invitation_path(invitation), class: "button"
          %h5= invitation.parent.description
          %h6
            = "on #{l(invitation.parent.date_and_time, format: :website_format)}"
