<!DOCTYPE html>
<html>
  <head>
    <title>Codebar.io</title>
    <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <link href='http://fonts.googleapis.com/css?family=Allerta' rel='stylesheet' type='text/css'>
    <script type="text/javascript" src="//use.typekit.net/hhc0xau.js"></script>
    <script type="text/javascript">try{Typekit.load();}catch(e){}</script>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div id="top"></div>
    <div id="navlight">
      <div id="nav-inside">
        <div class="logo">
          <%=link_to root_path do %>
            <%= image_tag "logo.png", width: '185px'%>
          <% end %>
        </div>
        <span id="mobile-nav-icon">
          <span class="line one"></span>
          <span class="line two"></span>
          <span class="line three"></span>
        </span>
        <div class="navigation">
          <ul class="navbar">
            <% if logged_in? %>
              <li>
                <%= link_to "Portal", portal_index_path %>
              </li>
            <% end %>
            <li>
              <%= link_to "Wall of Fame", wall_of_fame_path %>
            </li>
            <li>
            <%= link_to "Courses", courses_path %>
            </li>
            <% if logged_in? %>
              <li>
                <%= link_to "My Profile", edit_member_path %>
              </li>
            <% end %>
          </ul>
          <% if logged_in? %>
              <%= link_to "Log Out", logout_path, class: "member-button" %>
          <% else %>
              <%= link_to "Become a member", new_member_path, class: 'member-button'%>
              <%= link_to "Sign In", "/auth/github", class: "member-button" %>
          <% end %>
        </div>
      </div>
    </div>

    <div id="container">
      <%= render partial: 'layouts/messages' %>
      <%= yield %>
    </div>

    <footer>
    <div id="footer-width">
      <div class="dot-footer"></div>
      <div class="footer-copy">Get in touch: <a href="mailto:hello@codebar.io?Subject=Hello%20Codebar">hello@codebar.io</a></div>
      <div class="footer-copy right-float">&#169; 2013 codebar</div>
    </div>
    </footer>

  </body>
</html>
