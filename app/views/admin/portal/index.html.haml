%section#banner
  .row
    .large-4.columns
      %h3 My chapters
      %ul.side-nav
        - @chapters.each do |chapter|
          %li
            = link_to chapter.name, [ :admin, chapter ]
    .large-4.columns
      %h3 Workshops
      %ul.side-nav
        - @workshops.each do |workshop|
          %li
            =link_to admin_workshop_path(workshop) do
              %strong=workshop.chapter.name
              %br
              =humanize_date_with_time(workshop.date_and_time, workshop.time)
  %hr
  .row
    .large-4.columns
      %h3 Groups
      %ul.no-bullet
        - @groups.each do |group|
          %li
            = link_to group.name, [:admin, group]
    .large-4.columns
      %h3 Subscribers
      %ul.no-bullet
        - @subscribers.each do |member|
          %li
            = member.full_name
            %br
            %small= member.groups.map { |g| "#{g.name} #{g.chapter.name}" }.join(", ")
    .large-4.columns
      %h3 Sponsors
      %ul.no-bullet
        - @sponsors.each do |sponsor|
          %li
            = link_to sponsor.name, [ :admin, sponsor ]
