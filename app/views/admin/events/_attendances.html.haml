%ul.list-unstyled.ml-0
  - invitations.each do |invitation|
    %li
      .row
        .col-8
          = link_to admin_member_path(invitation.member) do
            = invitation.member.full_name
          - if invitation.member.newbie?
            %p.mb-0
              %em New attendee!
          %p.mt-2
            %small= invitation.note
        .col-4
          - if invitation.verified.blank? && @event.confirmation_required
            = link_to 'Verify', admin_event_invitation_verify_path(@event, invitation), class: 'btn btn-sm btn-success mb-2 w-100', method: :post
          = link_to 'Cancel attendance', admin_event_invitation_cancel_path(@event, invitation), class: 'btn btn-sm btn-danger w-100', method: :post
      %hr
