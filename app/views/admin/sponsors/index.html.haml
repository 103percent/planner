%section#banner
  .row
    %h1 Sponsors
  - @sponsors.each do |sponsor|
    .row
      %hr
      .large-3.columns
        = sponsor.name
        %p
          %em
            Sponsored
            = sponsor.sponsor_sessions.count
            sessions
      .large-4.columns
        = AddressDecorator.new(sponsor.address).to_html if sponsor.address
      .large-4.columns
        = image_tag sponsor.avatar, class: 'sponsor'
      .large-1.columns
        = link_to "Edit", edit_admin_sponsor_path(sponsor), class: 'button round small'


  %br
